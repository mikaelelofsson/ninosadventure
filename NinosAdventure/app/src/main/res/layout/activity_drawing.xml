<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_drawing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mikaelelofsson.ninosadventure.Drawing">

    <com.example.mikaelelofsson.ninosadventure.Drawing
        android:id="@+id/drawingView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        custom:layout_constraintLeft_toLeftOf="parent"
        custom:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        custom:layout_constraintHorizontal_bias="0.0"
        tools:layout_constraintLeft_creator="1"
        custom:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="64dp"
        app:srcCompat="@drawable/buss"
        android:id="@+id/imageButton"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@android:color/background_light"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:contentDescription="@string/bus" />
</android.support.constraint.ConstraintLayout>